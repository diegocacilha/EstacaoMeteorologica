<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>Telemetrias</title>
        <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Allura|Raleway" rel="stylesheet">
        <link rel="stylesheet" href="bootstrap/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="lib/css/main.css">

    </head>
    
    <body class="bg-secondary">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="#">Home</a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" href="/telemetrias">Telemetrias</a>
                    </li>
 
                    <li class="nav-item">
                        <a class="nav-link" href="/cadastro">Cadastro</a>
                    </li>
                </ul>     
            </div>
 
        </nav>
        <div class="container">
            <h1>Telemetrias</h1>
            <div id="cadastra-telemetria">
                <form id="form-cadastro-telemetria">
                    <input type="date" name="data" placeholder="Data">
                    <input type="number" name="temperatura" placeholder="Temperatura">
                    <input type="number" name="pressao" placeholder="Pressão">
                    <input type="submit" value="Salvar">
                </form>
            </div>
            <table class="table table-dark">
                <tr>
                    <td>ID</td>
                    <td>Data</td>
                    <td>Temperatura</td>
                    <td>Pressão</td>
                </tr>
                <%for (var i = 0; i < lista.length; i++){%>
                    <tr>
                        <!--tem que ter o = na frente: '=' = print -->
                        <td><%=lista[i].id%></td>
                        <td><%=lista[i].data%></td>
                        <td><%=lista[i].temperatura%></td>
                        <td><%=lista[i].pressao%></td>
                    </tr>
                <%}%>
            </table>
        </div>
        

    </body>
    <script src="lib/js/functions.js"></script>
        <script>
            var form = document.querySelector('#form-cadastro-telemetria');
            form.addEventListener('submit', function(evt){
                evt.preventDefault();
                var obj = {
                    data: form.data.value,
                    temperatura: form.temperatura.value,
                    pressao: form.pressao.value
                }
                sendRequest('POST', '/telemetrias/cadastro', obj, (retorno)=>{
                    console.log('Teste');
                    console.log(retorno);
                });
            });
        </script>
</html>

