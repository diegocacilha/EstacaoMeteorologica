<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <title>Telemetrias</title>
        <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css?family=Allura|Raleway" rel="stylesheet">
        <link rel="stylesheet" href="bootstrap/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="lib/css/main.css">

    </head>
    
    <body class="bg-secondary">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <ul class="navbar-nav">
                    <li class="nav-item ">
                        <a class="nav-link" href="/">Home</a>
                    </li>

                    <li class="nav-item active">
                        <a class="nav-link" href="/#">Telemetrias</a>
                    </li>
 
                    <li class="nav-item">
                        <a class="nav-link" href="/cadastro">Cadastro</a>
                    </li>
                </ul>     
            </div>
 
        </nav>
        <div class="container">
            <h1>Telemetrias</h1>
            <div id="cadastra-telemetria">
                <form id="form-cadastro-telemetria">
                    <div class="row">
                        <div class="form-group col">

                            <input class="form-control" type="date" name="data">
                        </div>

                        <div class="form-group col">
                            <input class="form-control" type="number" name="temperatura" placeholder="Temperatura">
                        </div>

                        <div class="form-group col">
                            <input class="form-control" type="number" name="pressao" placeholder="Pressão">
                        </div>

                        <input type="submit" value="Salvar">
                    </div>
                    
                </form>
            </div>
            <table class="table table-dark table-striped table-bordered">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Data</th>
                        <th>Temperatura</th>
                        <th>Pressão</th>
                        <th>Ações</th>
                    </tr>
                </thead>

                <%for (var i = 0; i < lista.length; i++){%>
                    <tr>
                        <!--tem que ter o = na frente: '=' = print -->
                        <td><%=lista[i].id%></td>
                        <td><%=lista[i].data%></td>
                        <td><%=lista[i].temperatura%></td>
                        <td><%=lista[i].pressao%></td>
                        <td><button class="btn btn-danger dropdown-toggle" id="drop" data-toggle="dropdown">Ações</button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item" href="/editar">Editar</a>
                                <a class="dropdown-item" href="/excluir">Excluir</a>
                            </div>
                        </td>
                    </tr>
                <%}%>
            </table>
        </div>
        

    </body>
    <script src="lib/js/functions.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
        <script>
            var form = document.querySelector('#form-cadastro-telemetria');
            form.addEventListener('submit', function(evt){
                evt.preventDefault();
                var obj = {
                    data: form.data.value,
                    temperatura: form.temperatura.value,
                    pressao: form.pressao.value
                }
                sendRequest('POST', '/telemetrias/cadastro', obj, (retorno)=>{
                    console.log('Teste');
                    console.log(retorno);
                });
            });

            $('.dropdown-toggle').dropdown()
        </script>
</html>

